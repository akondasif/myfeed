	<properties>
		<java.version>1.8</java.version>
		<spring-cloud.version>Brixton.RC1</spring-cloud.version>
		<spring-cloud-netflix.version>1.1.0.RC1</spring-cloud-netflix.version>
		<spring-cloud-stream.version>1.0.0.RC1</spring-cloud-stream.version>
		<spring-data-releasetrain.version>Hopper-SR1</spring-data-releasetrain.version>
	</properties>

